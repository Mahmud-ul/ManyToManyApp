@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h1>Student List</h1><br />
        <table id="example" class="table table-bordered table-dark">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Roll</th>
                    <th>Department</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Student item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Roll</td>
                        <td>@item.Department.Name</td>
                        <td>@item.Address</td>
                        <td>
                            <a class="btn btn-secondary" asp-route-id="@item.Id" asp-action="Update">Update</a> &nbsp; | &nbsp;
                            <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete" onclick=" return confirm('Are you Sure?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Roll</th>
                    <th>Department</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

