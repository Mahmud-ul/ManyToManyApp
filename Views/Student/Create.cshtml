@model Student
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Create Student</h1><br />
        <form method="post" asp-action="Create">
            <div class="box-body">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control col-md-5" asp-for="Name" required="Required" placeholder="Student Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Roll">Roll</label>
                    <input type="text" class="form-control col-md-5" asp-for="Roll" required="Required" placeholder="Student Roll" />
                    <span asp-validation-for="Roll" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentId">Department</label>
                    <select class="form-control col-md-5" asp-for="DepartmentId">
                        <option value="">Select Department</option>
                        @foreach (Department item in ViewBag.departments)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <textarea class="form-control col-md-5" asp-for="Address" required="Required" placeholder="Student Address"></textarea>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-success">Save</button>
                <a class="btn btn-secondary" asp-action="Index">Back to Index</a>
            </div>
        </form>
    </div>
</div>

